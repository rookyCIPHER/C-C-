//Q-To find if an element is in the array.


#include <stdio.h>
#include <stdlib.h>


int main() {
   int arr[100];
   int counter;
   int i;
   int check;


   printf("Enter the number elements in the array: ");
   scanf("%d", &counter);
   for(i=1; i<=counter; i++){
      printf("Enter the element at %d position: ", i);
      scanf("%d", &arr[i-1]);
   }
   

   printf("Enter the element to be checked: ");
   scanf("%d", &check);
   for(i=0; i<=(counter-1); i++){
      if (arr[i]==check){
            printf("The element is in the array.");
      }
   }

}



